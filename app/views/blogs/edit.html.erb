<h1>編集画面</h1>

<%= form_with(model: @blog, local: true) do |form| %>
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div>
  <%= form.submit "更新" %>
  </div>
<% end %>

<%= link_to "一覧へ", blogs_path %>
